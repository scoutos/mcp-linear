{
  "tasks": {
    "dev": "deno run --allow-net --allow-env --watch main.ts",
    "start": "deno run --allow-net --allow-env main.ts",
    "test": "deno test",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "fmt": {
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.json"],
    "exclude": ["npm/", ".git/"]
  },
  "lint": {
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
    "exclude": ["npm/", ".git/"]
  }
}
