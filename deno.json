{
  "tasks": {
    "dev": "deno run --allow-net --allow-env --watch main.ts",
    "start": "deno run --allow-net --allow-env main.ts",
    "test": "deno test",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "build": "npm run build",
    "check-types": "echo 'Skipping Deno type checking for Node.js files'"
  },
  "fmt": {
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.json"],
    "exclude": ["npm/", ".git/", "src/", "scripts/", "node_modules/", "dist/"]
  },
  "lint": {
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
    "exclude": ["npm/", ".git/", "src/", "scripts/", "node_modules/", "dist/"]
  }
}
