{
  "tasks": {
    "dev": "deno run --allow-env --allow-net --watch main.ts",
    "start": "deno run --allow-env --allow-net main.ts",
    "test": "deno test --allow-env --allow-net",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check-types": "deno check main.ts"
  },
  "imports": {
    "std/": "https://deno.land/std@0.223.0/",
    "@modelcontextprotocol/sdk/": "npm:@modelcontextprotocol/sdk@1.8.0/",
    "zod": "npm:zod@3.24.0"
  },
  "compilerOptions": {
    "strict": true,
    "useUnknownInCatchVariables": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true
  },
  "lint": {
    "include": ["**/*.ts"],
    "exclude": ["node_modules/", "dist/"]
  },
  "fmt": {
    "include": ["**/*.ts", "**/*.json", "**/*.md"],
    "exclude": ["node_modules/", "dist/", "README.md"]
  }
}
